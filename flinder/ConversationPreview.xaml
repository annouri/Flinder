<UserControl x:Class="flinder.ConversationPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:flinder"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="357">
    <Grid Background="#FFFBF7F7">
        <Ellipse HorizontalAlignment="Left" Height="67" Margin="15,7,0,0" VerticalAlignment="Top" Width="67">
            <Ellipse.Fill>
                <ImageBrush x:Name="avatar" ImageSource="hamza.jpg"/>
            </Ellipse.Fill>
        </Ellipse>
        <Label x:Name="name" Content="Hamza Elgarrab" HorizontalAlignment="Left" Margin="103,9,0,0" VerticalAlignment="Top" Foreground="#FF09090A" FontSize="24" Height="48" FontFamily="Dosis" FontWeight="Bold"/>
        <Label x:Name="message" Content="Fen asahbi  ra hna  f terrain d basket  aj." HorizontalAlignment="Left" Margin="103,40,0,0" VerticalAlignment="Top" Foreground="#FFBBB7B7" Background="{x:Null}" FontSize="14" FontFamily="Dosis" FontWeight="Bold"/>
        <Label x:Name="since" Content="5:31" HorizontalAlignment="Right" Margin="0,18,23,0" VerticalAlignment="Top" Foreground="#FFDFD8D8" FontFamily="Dosis" FontWeight="Bold" FontSize="14"/>

    </Grid>
</UserControl>
